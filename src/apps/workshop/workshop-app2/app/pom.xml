<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 https://maven.apache.org/xsd/maven-4.0.0.xsd">
  <modelVersion>4.0.0</modelVersion>
  <parent>
    <groupId>org.geonetwork</groupId>
    <artifactId>gn-app-workshop2-parent</artifactId>
    <version>5.0.0-SNAPSHOT</version>
  </parent>

  <!--
  GIVE YOUR APP AN artifactId AND name/description
  -->
  <artifactId>workshop-app2-app</artifactId>
  <name>gn-app-workshop2-app</name>
  <description></description>

  <dependencies>

    <!--
          keep this dependency - this is where the spring boot app (and GN plugin system) is.
      -->
    <dependency>
      <groupId>org.geonetwork</groupId>
      <artifactId>gn-generic-app</artifactId>
      <version>${project.version}</version>
    </dependency>

    <!--
        Need to bring this in - it has the controller (endpoint) implementation (and needed dependencies)
    -->
    <dependency>
      <groupId>org.geonetwork</groupId>
      <artifactId>gn-app-workshop2-module-implementation</artifactId>
      <version>${project.version}</version>
    </dependency>

  </dependencies>

  <!--
      This is for `mvn spring-boot:run`.  The main app is in the `gn-generic-app` so we have
      to point to it here.  Alternatively, you can include your own springboot Application class -
      however, this isn't recommended unless you have advanced needs.
  -->
  <build>
    <plugins>
      <plugin>
        <groupId>org.springframework.boot</groupId>
        <artifactId>spring-boot-maven-plugin</artifactId>
        <configuration>
          <mainClass>org.geonetwork.GeonetworkGenericApplication</mainClass>
        </configuration>
      </plugin>
    </plugins>
  </build>

</project>
